<link rel="stylesheet" href="login.css">

<section>
    <div class="signin">
        <div class="login-box">
            <h2>Sign In</h2>
            <form action="/login" method="post">
                <div class="inputBox">
                    <input type="text" name="username" required>
                    <i>Username</i>
                </div>
                <div class="inputBox">
                    <input type="password" name="password" required>
                    <i>Password</i>
                    <b>
                        <% if (messages.error) { %>
                            <%= messages.error %>
                        <% } %>
                    </b>
                </div>
                
                <div class="inputBox">
                    <input type="submit" value="Login">
                </div>
            </form>
        </div>
    </div>
</section>